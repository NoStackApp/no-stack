{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "typeRoots": ["node_modules/@types", "src/@types"],
    "declarationMap": true,
    "removeComments": true,
    "lib": ["esnext", "dom"],
    "strict": true,
    "target": "es5",
    "moduleResolution": "node",
    "module": "ESNext",
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": "src",
    "paths": {
      "*": ["*"]
    }
  },
  "typeRoots": ["node_modules/@types", "src/@types"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
